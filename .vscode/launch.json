  "version": "0.2.0",
  "configurations": [
    {
      "name": "MediaProcessingService",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "8003"
      ],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Celery : MediaProcessingService",
      "type": "python",
      "request": "launch",
      "program": "/usr/local/bin/celery",
      "args": [
        "-A",
        "media_processing_services",
        "worker",
        "--loglevel=info",
        // "--queues=transcription"
      ], //using dedicated queue as few tasks were missing
      "console": "integratedTerminal",
      // "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to Docker",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "port": 5678,
      "host": "localhost"
    },
    {
      "name": "Docker: Attach to Celery",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "port": 5679,
      "host": "localhost"
    }
  ]
}